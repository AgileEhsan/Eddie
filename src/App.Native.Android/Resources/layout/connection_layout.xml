<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/transparent">
                <ImageView
                    android:src="@drawable/eddie_airvpn_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />
                <ImageView
                    android:src="@drawable/eddie_airvpn_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_frame"
                android:padding="8dp">
                <TextView
                    android:id="@+id/profile_cap"
                    android:text="@string/conn_profile_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="left"
                    android:textColor="@color/gray25"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/profile_filename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/gray50"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:maxLines="12" />
                <Button
                    android:id="@+id/select_profile_btn"
                    android:text="..."
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/server_info_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_frame"
                android:padding="8dp"
                android:visibility="gone">
                <GridLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:rowCount="3"
                    android:columnCount="2"
                    android:layout_margin="0dp"
                    android:gravity="center_vertical|center">
                    <TextView
                        android:id="@+id/profile_server_cap"
                        android:text="@string/conn_server_cap"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_columnWeight="0"
                        android:layout_rowWeight="1"
                        android:layout_margin="2dp"
                        android:textSize="18dp"
                        android:textColor="@color/gray25" />
                    <TextView
                        android:id="@+id/profile_server"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="2dp"
                        android:textSize="18dp"
                        android:textColor="@color/gray50"
                        android:maxLines="12" />
                    <TextView
                        android:id="@+id/profile_port_cap"
                        android:text="@string/conn_port_cap"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_columnWeight="0"
                        android:layout_rowWeight="1"
                        android:layout_margin="2dp"
                        android:textSize="18dp"
                        android:textColor="@color/gray25" />
                    <TextView
                        android:id="@+id/profile_port"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="2dp"
                        android:textSize="18dp"
                        android:textColor="@color/gray50" />
                    <TextView
                        android:id="@+id/profile_protocol_cap"
                        android:text="@string/conn_protocol_cap"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_columnWeight="0"
                        android:layout_rowWeight="1"
                        android:layout_margin="2dp"
                        android:textSize="18dp"
                        android:textColor="@color/gray25" />
                    <TextView
                        android:id="@+id/profile_protocol"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="2dp"
                        android:textSize="18dp"
                        android:textColor="@color/gray50" />
                </GridLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <Button
                        android:id="@+id/connect_profile_btn"
                        android:text="@string/conn_connect_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18dp"
                        android:textAllCaps="false" />
                    <Button
                        android:id="@+id/disconnect_profile_btn"
                        android:text="@string/conn_disconnect_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="18dp"
                        android:textAllCaps="false" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/network_status_cap"
                        android:text="@string/conn_network_status_cap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="left"
                        android:textColor="@color/blue"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/network_connection_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/gray50"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:maxLines="12" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/vpn_status_cap"
                        android:text="@string/conn_vpn_status_cap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="left"
                        android:textColor="@color/blue"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/vpn_connection_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/gray50"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:maxLines="12" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/connection_error_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/connection_error_cap"
                        android:text="@string/conn_error_cap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="left"
                        android:textColor="@color/red"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/connection_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:maxLines="12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>